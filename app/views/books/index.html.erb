 <h1><strong>Books</strong></h1>
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
    </tr>
   </thead>
   <tbody>
  <% @books.each do |book| %>
     <tr>
      <td class="title"><%= book.title %></td>
      <td class="body"><%= book.body %></td>
      <td class="buttom"><%= link_to("Show", book_path(book.id)) %></td>
      <td class="buttom"><%= link_to("Edit", edit_book_path(book.id)) %></td>
      <td class="buttom"><%= link_to("Destroy", book_path(book.id), method: :delete) %></td>
     </tr>
  <% end %>
   </tbody>
  </table>
 
 <h2><strong>New book</strong></h2>
 <!-- form_with部分 -->
 <%= form_with model: @book, local:true do |f| %>
 
 <% @book.errors.full_messages.each do |message| %>

 <p>A error prohibited this book from being saved:<br><%= message %></p>
 <% end %>
 
 <h4><strong>Title</strong></h4>
 <%= f.text_field :title %>

 <h4><strong>Body</strong></h4>
 <%= f.text_area :body %>

 <p><%= f.submit 'Create Book' %></p>
 <% end %>